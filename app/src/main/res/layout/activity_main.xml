<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Display App title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:layout_margin="16dp" />

    <!-- Display Real-time Vehicle Data -->
    <TextView
        android:id="@+id/fuelLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fuel_level_label"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/speedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed_label"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/engineStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/engine_status_label"
        android:textSize="18sp"/>

    <!-- Navigation and Weather Information -->
    <TextView
        android:id="@+id/navigationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigation_label"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/weatherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_label"
        android:textSize="18sp"/>

    <!-- Media Player UI -->
    <TextView
        android:id="@+id/mediaStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media_player_status"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"/>

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pause"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:layout_marginTop="10dp"/>


</LinearLayout>



